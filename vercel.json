{
  "version": 2,
  "buildCommand": "sh -c 'cd frontend && npm run build'",
  "outputDirectory": "frontend/dist",
  "installCommand": "sh -c 'cd frontend && npm ci'",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
