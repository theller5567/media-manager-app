{
  "version": 2,
  "buildCommand": "cd frontend && pnpm build",
  "outputDirectory": "frontend/dist",
  "installCommand": "corepack enable && corepack prepare pnpm@10.28.0 --activate && pnpm install --no-frozen-lockfile",
  "framework": "vite",
  "rewrites": [
    {
      "source": "/(.*)",
      "destination": "/index.html"
    }
  ],
  "headers": [
    {
      "source": "/assets/(.*)",
      "headers": [
        {
          "key": "Cache-Control",
          "value": "public, max-age=31536000, immutable"
        }
      ]
    }
  ]
}
